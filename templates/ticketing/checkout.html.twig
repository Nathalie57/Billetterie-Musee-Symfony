{% extends 'base.html.twig'%}
{% block javascripts %}<script src="https://js.stripe.com/v3/"></script>{% endblock %}
{% block body %}
 
    
        <div id="wrapper">
            <nav id="nav">
                <a href="{{ path('home') }}" class="icon solid fa-home"><span>Accueil</span></a>
                <a href="{{ path('opening_hours') }}" class="icon solid fa-clock"><span>Les horaires</span></a>
                <a href="{{ path('price') }}" class="icon solid fa-euro-sign"><span>Les tarifs</span></a>
                <a href="{{ path('choice') }}" class="icon solid fa-ticket-alt active"><span>Réservation</span></a>
		    </nav>

        <div id="main">
            <article id="checkout" class="panel">
                    <script>
                    var stripe = Stripe('pk_test_GPFyeTwBm3iIsnTEw8g2Ezkt00e31t3we6');
                    var elements = stripe.elements();
                    </script>

                    <form id="payment-form">
                        <div id="card-element">
                            <!-- Elements will create input elements here -->
                        </div>

                        <!-- We'll put the error messages in this element -->
                        <div id="card-errors" role="alert"></div></br>

                        <button id="submit">Payer {{ totalPrice }}€</button>
                    </form>
                
                <script>
                var style = {
                    base: {
                        color: "#32325d",
                    }
                    };

                    var card = elements.create("card", { style: style });
                    card.mount("#card-element");
                
                
                </script>

{% endblock %}